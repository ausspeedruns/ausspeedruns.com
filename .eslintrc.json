{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:react/recommended",
		"standard-with-typescript",
		"next/core-web-vitals"
	],
	"overrides": [
		{
			"files": "*.json",
			"parser": "jsonc-eslint-parser",
			"rules": {}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"no-tabs": 0,
		"indent": [1, "tab"],
		"semi": ["error", "always"],
		"comma-dangle": ["error", "only-multiline"],
		"space-before-function-paren": "off",
		"quotes": ["error", "double"]
	}
}
